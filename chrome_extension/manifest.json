{
  "name": "Funsubscribe",
  "description": "Manage your online subscriptions",
  "version": "2.0",
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Sync your subscription preferences"
  },
  "content_scripts": [
    {
      "matches": ["http://funsubscribe.herokuapp.com/*"],
      "js": ["content.js"]
    }
  ],
  "manifest_version": 2
}
